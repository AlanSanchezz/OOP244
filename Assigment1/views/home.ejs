<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>(Home)</title>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section text-center" style="margin-top:0 !important;">
        <video autoplay muted loop class="img-fluid rounded shadow-lg mb-3" style="max-height:440px; object-fit:cover; width:100%;">
            <source src="/videos/hero-dessert.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="container">
                <h1 class="display-4 fw-bold" style="color:#a0522d;">Welcome to Chalet</h1>
                <p class="lead" style="color:#4b2e19;">Discover the best dessert meal kits, ready to prepare and enjoy at home.</p>
        </div>
    </section>

        <h2 class="mt-5 mb-3 text-center" style="color:#a0522d;">Featured Desserts</h2>
        <div class="container">
            <div class="row justify-content-center">
                <% featuredMealKits.forEach(function(kit) { %>
                    <div class="col-12 col-sm-10 col-md-6 col-lg-4 d-flex align-items-stretch mb-4">
                        <%- include('partials/mealkit', { kit: kit }) %>
                    </div>
                <% }); %>
            </div>
        </div>

</body>
</html>
